MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/<your-db-name>?retryWrites=true&w=majority
# Alternatively set these pieces separately (safer for commits):
# MONGODB_HOST=cluster0.mongodb.net
# MONGODB_USER=yourUser
# MONGODB_PASSWORD=yourPassword
# MONGODB_DB=<your-db-name>
JWT_SECRET=<your-jwt-secret>
JWT_EXPIRE=30d
PORT=5000

# Development flags
DEV_OTP=false
NODE_ENV=development

# SMTP (email) - optional for OTP email delivery
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@example.com
# SMTP_PASS should not be committed. Set in your local .env file.
SMTP_PASS=
SMTP_FROM=MultiMart <you@example.com>

# Twilio (SMS) - optional for phone OTP delivery
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=+10000000000

# Logging
LOG_LEVEL=info
